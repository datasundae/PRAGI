# PostgreSQL Database Configuration
DB_NAME=musartao                          # Name of your PostgreSQL database
DB_USER=your_username                     # Database username
DB_PASSWORD=your_password                 # Database password
DB_HOST=localhost                         # Database host (default: localhost)
DB_PORT=5432                              # Database port (default: 5432)

# Database Encryption Configuration
DB_ENCRYPTION_KEY=your_32_byte_key       # 32-byte key for database encryption

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key       # Your OpenAI API key

# Flask Configuration
FLASK_SECRET_KEY=your_flask_secret_key   # Secret key for Flask sessions
FLASK_DEBUG=True                         # Set to False in production
FLASK_PORT=5009                          # Port to run the Flask app on

# Google OAuth Configuration
GOOGLE_CLIENT_SECRETS_FILE=path/to/your/client_secrets.json  # Path to Google OAuth client secrets file
GOOGLE_CLIENT_ID=your_google_client_id                       # Google OAuth client ID
GOOGLE_CLIENT_SECRET=your_google_client_secret               # Google OAuth client secret
GOOGLE_REDIRECT_URI=http://localhost:5009/oauth2callback     # OAuth callback URL

# Redis Configuration
REDIS_URL=redis://localhost:6379         # Redis connection URL for rate limiting

# Logging Configuration
LOG_LEVEL=INFO                           # Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_FILE=app.log                         # Log file path

# Security Configuration
SESSION_COOKIE_SECURE=True               # Set to True in production
SESSION_COOKIE_HTTPONLY=True             # Prevent JavaScript access to cookies
SESSION_TYPE=filesystem                  # Session storage type

# Application Settings
MAX_CONTENT_LENGTH=16777216              # Maximum upload size in bytes (16MB)
ALLOWED_EXTENSIONS=pdf,txt,doc,docx      # Allowed file extensions for upload
UPLOAD_FOLDER=uploads                    # Folder for uploaded files

# Vector Search Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2  # Model for text embeddings
VECTOR_SIMILARITY_THRESHOLD=0.7          # Minimum similarity score for results
MAX_SEARCH_RESULTS=10                    # Maximum number of search results to return

# Rate Limiting
RATE_LIMIT_DEFAULT=200 per day          # Default rate limit
RATE_LIMIT_BURST=50 per hour           # Burst rate limit 