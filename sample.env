# PostgreSQL Database Configuration
DB_NAME=musartao                      # Your database name
DB_USER=your_username                 # Database user (e.g., postgres)
DB_PASSWORD=your_secure_password      # Database password
DB_HOST=localhost                     # Database host (localhost for local development)
DB_PORT=5432                          # Default PostgreSQL port

# Database Encryption Configuration
DB_ENCRYPTION_KEY=your_secure_encryption_key_here    # Must be a valid Fernet key (32 url-safe base64-encoded bytes)

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key    # Get this from platform.openai.com

# Flask Configuration
FLASK_SECRET_KEY=your_flask_secret    # Random string for session security
FLASK_DEBUG=True                      # Set to False in production
FLASK_PORT=5009                       # Application port number

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_client_id       # From Google Cloud Console
GOOGLE_CLIENT_SECRET=your_client_secret # From Google Cloud Console
GOOGLE_REDIRECT_URI=http://127.0.0.1:5009/callback  # OAuth callback URL

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379      # Redis connection URL

# Logging Configuration
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR, or CRITICAL
LOG_FILE=app.log                      # Log file path

# Security Configuration
SESSION_COOKIE_SECURE=False           # Set to True in production
SESSION_COOKIE_HTTPONLY=True          # Security best practice
SESSION_TYPE=filesystem               # Session storage type

# Application Settings
MAX_CONTENT_LENGTH=16777216           # Maximum file upload size (16MB)
ALLOWED_EXTENSIONS=pdf,txt,doc,docx   # Allowed file upload types
UPLOAD_FOLDER=uploads                 # Upload directory path

# Vector Search Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2  # Model for text embeddings
VECTOR_SIMILARITY_THRESHOLD=0.3       # Minimum similarity score for results
MAX_SEARCH_RESULTS=10                 # Maximum number of search results to return

# Rate Limiting
RATE_LIMIT_DEFAULT="200 per day"      # Default rate limit
RATE_LIMIT_BURST="50 per hour"        # Burst rate limit 